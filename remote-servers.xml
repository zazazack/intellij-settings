<application>
  <component name="RemoteServers">
    <remote-server name="minikube" type="docker">
      <configuration>
        <option name="apiUrl" value="https://192.168.99.140:2376" />
        <option name="certificatesPath" value="$USER_HOME$/.minikube/certs" />
      </configuration>
    </remote-server>
    <remote-server name="Docker for Mac" type="docker">
      <configuration>
        <option name="apiUrl" value="unix:///var/run/docker.sock" />
        <option name="certificatesPath" />
      </configuration>
    </remote-server>
    <remote-server name="Docker Machine" type="docker">
      <configuration>
        <option name="apiUrl" />
        <option name="certificatesPath" />
        <option name="machine" value="default" />
      </configuration>
    </remote-server>
  </component>
</application>